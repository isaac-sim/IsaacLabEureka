    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
        },

        {
            "name": "Train Eureka",
            "type": "debugpy",
            "request": "launch",
            "args" : ["--task", "Isaac-Cartpole-Direct-v0", "--max_training_iterations", "100", "--rl_library", "rsl_rl"],
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
        },
    ]
}
